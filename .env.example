# Google Wallet
GOOGLE_ISSUER_ID=3388000000000000000
GOOGLE_SA_JSON=./certs/google-credentials.json

# Apple Wallet (requires Apple Developer setup)
APPLE_TEAM_ID=ABCD123456
APPLE_PASS_TYPE_ID=pass.com.sbcwallet.logistics
APPLE_CERT_PATH=./certs/pass.p12
APPLE_CERT_PASSWORD=yourpassword
APPLE_WWDR_PATH=./certs/wwdr.pem

# APNs Push Notifications (for real-time pass updates)
# Get your .p8 key from Apple Developer > Keys > Create Key (APNs)
APPLE_APNS_KEY_PATH=./certs/AuthKey_XXXXXXXXXX.p8
APPLE_APNS_KEY_ID=XXXXXXXXXX
APNS_SANDBOX=false

# SOCKS5 Proxy for APNs (V2Ray/Clash) - Optional
# Use if you can't connect directly to api.push.apple.com
# APNS_SOCKS5_HOST=127.0.0.1
# APNS_SOCKS5_PORT=10808

# Alternative: Cloudflare Worker Relay - Optional
# APNS_RELAY_URL=https://your-worker.workers.dev
# APNS_RELAY_SECRET=your-secret

# Server Settings
# PUBLIC_URL=https://your-ngrok-url.ngrok.io
# PORT=3003
