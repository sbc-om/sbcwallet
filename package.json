{
  "name": "sbcwallet",
  "version": "0.0.1",
  "description": "Unified Wallet-Pass SDK for Real-World Credentials",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/copy-assets.js",
    "test": "vitest run",
    "test:watch": "vitest",
